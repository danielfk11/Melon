{
  "Server": {
    "TcpPort": 5672,
    "TcpHost": "0.0.0.0",
    "AdminPort": 8080,
    "AdminHost": "127.0.0.1",
    "TlsEnabled": false,
    "TlsCertificateFile": "",
    "TlsCertificatePassword": "",
    "MaxConnections": 1000,
    "MaxChannelsPerConnection": 1000,
    "ConnectionTimeoutMs": 30000,
    "HeartbeatIntervalMs": 30000
  },
  "Persistence": {
    "DataDirectory": "./data",
    "SegmentSize": 134217728,
    "SyncPolicy": "Batch",
    "FlushIntervalMs": 1000,
    "RetentionDays": 7,
    "MaxDiskUsageGB": 50,
    "CompactionIntervalHours": 6,
    "CompactionThresholdMB": 1000
  },
  "Security": {
    "DefaultUsername": "admin",
    "DefaultPassword": "admin123",
    "AuthRequired": true,
    "AuthMethod": "ScramSha256",
    "ScramIterations": 4096,
    "ConnectionRateLimit": 100,
    "ConnectionRateWindowMs": 60000,
    "MaxFrameSize": 33554432,
    "MaxMessageSize": 16777216
  },
  "QueueDefaults": {
    "MessageTtlMs": 3600000,
    "VisibilityTimeoutMs": 300000,
    "MaxDeliveryCount": 5,
    "MaxLength": 100000,
    "MaxPriority": 9
  },
  "Performance": {
    "IoThreads": 0,
    "WorkerThreads": 0,
    "GcServerMode": true,
    "GcConcurrentMode": true,
    "ReceiveBufferSize": 65536,
    "SendBufferSize": 65536,
    "PipeBufferSize": 65536
  },
  "Observability": {
    "MetricsEnabled": true,
    "MetricsPort": 9090,
    "TracingEnabled": false,
    "TracingEndpoint": "",
    "PrometheusEnabled": true,
    "PrometheusPath": "/metrics"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "MelonMQ": "Debug",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff "
    },
    "File": {
      "Path": "./logs/melonmq-.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 30,
      "FileSizeLimitBytes": 104857600
    }
  }
}